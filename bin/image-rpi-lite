#!/bin/bash

clear
echo "imaging..."

[[ $( id -u ) == 0 ]] || { echo "error: please run as root"; exit 1; }

#

osi=raspios_lite_arm64

dev=/dev/sda

#

url=$( curl --head --location --silent --write-out '%{url_effective}\n' --output /dev/null https://downloads.raspberrypi.org/${osi}_latest )
img=$( basename $url )

#

[[ -f $img ]] || curl --output $img $url

#

rpi-imager --cli $img $dev
